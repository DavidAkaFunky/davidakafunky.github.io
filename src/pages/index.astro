---
import Layout from "../layouts/Layout.astro";
import Introduction from "../components/home/Introduction.astro";
import Experience from "../components/home/Experience.astro";
import CurrentActivity from "../components/home/CurrentActivity.astro";
import Education from "../components/home/Education.astro";
---

<Layout title="Hi, I'm David!">
  <div class="card">
    <div class="intro-grid">
      <div class="photo-flex">
        <img src="/photo.png" />
      </div>
      <div>
        <h1>Hello there! :3</h1>
        <Introduction />
      </div>
    </div>
    <Experience />
    <div class="two-col-grid">
      <Education />
      <CurrentActivity />
    </div>
  </div>
</Layout>

<style>

  h1 {
    font-size: max(1.8rem, min(7vw, 2.4rem));
  }

  img {
    border: 2px solid #2dd5f6;
    border-radius: 50%;
    box-shadow: 0 0 8px #2dd5f6;
    width: 12rem;
    object-fit: contain;
  }

  .photo-flex {
    display: flex;
    align-items: center;
    justify-content: center;
    order: 1;
  }

  @media screen and (max-width: 750px) {
    .intro-grid {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (min-width: 750px) {
    .intro-grid {
      display: grid;
      grid-template-columns: 4fr auto;
      align-content: start;
      gap: 1rem;
    }
  }

  .two-col-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 300px), 1fr));
    gap: 1rem;
  }
</style>