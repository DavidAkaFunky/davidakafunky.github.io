---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Welcome to my page!" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="main-content">
      <nav>
        <a href="/">Home</a>
        |
        <a href="/cv">CV</a>
        |
        <a href="https://github.com/DavidAkaFunky">GitHub</a>
      </nav>
      <slot />
      <footer>
        <a href="https://vaascoo.pt/">&lt;- Vasco</a>
        <a href="https://pombosmalvados.github.io/webring/">Webring</a>
        <a href="https://diogoms.pt/">Diogo -&gt;</a>
      </footer>
    </main>
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    box-sizing: border-box;
  }

  html {
    font-family:
      JetBrains Mono,
      system-ui,
      sans-serif;
    background: #181825;
    min-height: 100%;
    background: url("/background.jpg") no-repeat center center fixed;
    background-size: cover;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  a {
    text-decoration: none;
    color: white;
  }

  ul {
    padding-left: 1rem;
  }

  nav {
    display: flex;
    margin: 1rem 0;
    font-size: 2rem;
    font-weight: bold;
    gap: 1rem;
  }

  @media screen and (max-width: 750px) {
    nav {
      justify-content: space-evenly;
    }
  }

  .main-content {
    max-width: 100rem;
    color: white;
    font-size: 1.2rem;
    line-height: 1.6;
    padding: 0 2.5rem;
  }

  footer {
    display: flex;
    justify-content: space-between;
    margin: 1rem 0;
    font-size: min(4vw, 2rem);
    font-weight: bold;
    text-align: center;
    gap: 1rem;
  }
</style>
